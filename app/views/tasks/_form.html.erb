<%= form_with model: @task, local: true do |f| %>

  <p>
    <%= f.label "Task title" %><br>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label "Task description" %><br>
    <%= f.text_area :description %>
  </p>

  <p>
    <%= f.label "Your company" %><br>
    <%= f.text_field :company %>
  </p>

  <p>
    <%= f.label "Link to task" %><br>
    <%= f.text_field :url %>
  </p>

  <p>
    <%= f.submit "Done!" %>
  </p>
<% end %>